---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index">
  
<!-- HERO SECTION -->
<section id="hero" class="pt-2 pb-10">
  <h1 class="my-4 text-2xl font-bold sm:my-8 sm:text-3xl">
    Fractional CTO for product-driven teams
  </h1>
  <p class="mb-6 text-lg">
    I help founders turn ambiguous ideas into reliable systems —
    bridging business goals, product strategy, and hands-on execution.
  </p>
</section>

    
    <!-- RECENT POSTS -->
    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="py-10">
          <h2 class="text-2xl font-semibold tracking-wide">Recent Posts</h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
          <div class="my-8 text-center">
            <LinkButton href="/posts/">
              All Posts
              <IconArrowRight class="inline-block rtl:-rotate-180" />
            </LinkButton>
          </div>
        </section>
      )
    }

    <Hr />

    <Hr />

    <!-- FOOTER NOTE SECTION
    <section id="footer-note" class="py-6 text-center">
      <p class="text-sm text-gray-600 dark:text-gray-400">
        Also open to full-time technical leadership roles—
        <a
          href="https://linkedin.com/in/jamesprichardson"
          class="text-blue-600 hover:underline dark:text-blue-400"
        >
          connect on LinkedIn
        </a>.
      </p>
    </section> -->
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
